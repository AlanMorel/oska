{
    "name": "oska",
    "version": "1.0.0",
    "author": "Alan Morel",
    "license": "MIT",
    "description": "A Discord bot written using Node in TypeScript",
    "scripts": {
        "build": "tsc --project ./tsconfig.json && tsc-alias -p ./tsconfig.json",
        "start": "nodemon --config ./nodemon.config.json ./src/Bot.ts --watch src",
        "static": "yarn run build && node ./dist/Bot.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AlanMorel/oska.git"
    },
    "bugs": {
        "url": "https://github.com/AlanMorel/oska/issues"
    },
    "homepage": "https://github.com/AlanMorel/oska#readme",
    "dependencies": {
        "discord.js": "^13.3.1",
        "dotenv": "^10.0.0"
    },
    "devDependencies": {
        "@types/node": "^16.11.7",
        "@typescript-eslint/eslint-plugin": "^5.3.1",
        "@typescript-eslint/parser": "^5.3.1",
        "babel-eslint": "^10.1.0",
        "eslint": "^8.2.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-security": "^1.4.0",
        "nodemon": "^2.0.15",
        "prettier": "^2.4.1",
        "ts-node": "^10.4.0",
        "tsc-alias": "^1.3.9",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.4.4"
    }
}
